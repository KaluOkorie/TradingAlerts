
name: CryptoSignal Alert

on:
  schedule:
    # Crypto alerts: Every 2 hours at minute 0, every day
    - cron: '0 */2 * * *'
  workflow_dispatch:

jobs:
  crypto-alert:
    runs-on: ubuntu-latest
    steps:
      - name: Check out repository
        uses: actions/checkout@v4

      - name: Set up Python 3.11
        uses: actions/setup-python@v4
        with:
          python-version: '3.11'

      - name: Install crypto dependencies
        run: |
          python -m pip install --upgrade pip
          pip install ccxt pandas requests

      - name: Export Telegram credentials
        run: |
          echo "TELEGRAM_BOT_TOKEN=${{ secrets.TELEGRAM_BOT_TOKEN }}" >> $GITHUB_ENV
          echo "TELEGRAM_CHAT_ID=${{ secrets.TELEGRAM_CHAT_ID }}" >> $GITHUB_ENV

      - name: Run crypto alerts
        run: python CryptoAlert.py
